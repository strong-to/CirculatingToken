    // 2. 资产投资组合 (Portfolio / Assets)
    // [作用]: 渲染 "我的钱包" 或 "资产概览" 卡片
    // [关联]: 通过 system_id 关联 project.json 获取 Logo 和全名
    // ==================================================================================
    "assets": [
        {
            // [Link] 关键外键：通过这个 ID 去 project.json 查找币价、Logo、项目全名
            "system_id": "DBTF0000001",
            // [Display] 代币符号 (冗余字段，避免列表页频繁查表，提升性能)
            "symbol": "PRIME",
            // ---------------------------------------------------
            // [Core Data] 持有数量 (这里是纯数字)
            // ---------------------------------------------------
            // 1. 可用余额 (Wallet Balance)
            // 含义: 钱包里躺着的，随时可以卖出或转账的币
            "balance_available": 1500.50,
            // 2. 质押中 (Staking)
            // 含义: 锁在协议里赚利息的币 (不能卖，但属于你的资产)
            "balance_staked": 500.00,
            // 3. 锁仓/线性释放 (Vesting)
            // 含义: 比如早期投资或团队份额，还没解锁的币
            "balance_locked": 0,
            // [Helper] 总持仓量 (前端可选择是否由后端计算好下发)
            // 逻辑: available + staked + locked
            "balance_total": 2000.50,
            // ---------------------------------------------------
            // [Profit & Loss] 盈亏分析数据
            // ---------------------------------------------------
            // 待领取奖励 (Unclaimed)
            // 含义: 质押产生的利息，还没点 "Claim" 到钱包里的
            "unclaimed_rewards": 12.5,
            // 平均买入成本 (Avg Price)
            // 含义: 用于前端计算 "收益率" (PnL)。
            // 逻辑: (当前价 2.30 - 平均成本 1.80) * 持仓量 = 浮动盈亏
            "avg_buy_price": 1.80
        },
        // 下一个项目的持仓...
        {
            "system_id": "DBTF0000003",
            "symbol": "VRB",
            "balance_available": 10000,
            "balance_staked": 2000,
            "balance_locked": 5000,
            "balance_total": 17000,
            "unclaimed_rewards": 450.0,
            "avg_buy_price": 0.5
        }
    ],
