# Nginx 服务器配置示例 - 图片和静态资源优化
# 将此配置添加到你的 Nginx 配置文件中

server {
    listen 80;
    server_name your-domain.com;
    root /path/to/your/out;  # Next.js 构建输出目录
    
    index index.html;
    
    # ==================== Gzip 压缩 ====================
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied any;
    gzip_comp_level 6;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/json
        application/javascript
        application/xml+rss
        application/xhtml+xml
        application/x-font-ttf
        application/x-font-opentype
        application/vnd.ms-fontobject
        image/svg+xml
        image/x-icon
        font/opentype
        font/ttf
        font/eot
        font/otf
        font/woff
        font/woff2;
    
    # ==================== Brotli 压缩（如果安装了 ngx_brotli 模块）====================
    # brotli on;
    # brotli_comp_level 6;
    # brotli_types text/plain text/css text/xml text/javascript application/json application/javascript application/xml+rss application/xhtml+xml;
    
    # ==================== 静态资源缓存 ====================
    location ~* \.(jpg|jpeg|png|gif|webp|svg|ico)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    location ~* \.(css|js)$ {
        expires 1M;
        add_header Cache-Control "public";
        access_log off;
    }
    
    location ~* \.(ttf|otf|woff|woff2|eot)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
        access_log off;
    }
    
    # ==================== HTML 文件不缓存 ====================
    location ~* \.(html|htm)$ {
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
        add_header Pragma "no-cache";
    }
    
    # ==================== 安全头 ====================
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # ==================== 主路由配置 ====================
    location / {
        try_files $uri $uri.html $uri/ /index.html;
    }
    
    # ==================== 禁止访问隐藏文件 ====================
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }
}



